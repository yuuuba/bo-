
# info
<div class="ondemand-info">
  <div class="text-sm breadcrumbs">
  <ul>
    <li><a>Home</a></li> 
    <li><a>Documents</a></li> 
    <li>Add Document</li>
  </ul>
  </div>

  <div class="">
    <ul class="flex">
      <% @ondemand_tags.each do |tag| %>
      <li><%= "##{tag.name}" %></li>
      <% end %>
    </ul>
  </div>

  <div class="text-sm breadcrumbs">
  <ul>
      
  </ul>
  </div>
