# main
<main>
  <div class="main-top">
    <div class="profile-img">
    </div>
    <div class="ondemand-title">
      <p>タイトル</p>
      <%= @ondemand.title %>
    </div>
    <div class="edit">
    <% if user_signed_in? && current_user.id == @ondemand.user_id %>
      <%= link_to "編集", action: "edit" %>
    <% end %>
    </div>
  </div>

  <div class="ondemand-content">
    <div class="img">
      <% if @ondemand.images.attached? %>
        <% @ondemand.images.each do |image| %>
          <%= image_tag image, width: 200, height: 200 %> <br>
        <% end %>
      <% end %>
    </div>
    <div class="ondemand-detail">
    </div>
  </div>

  <div class="attention-area">
    <div class="calender">
    </div>
    <div class="attention">
    </div>
  </div>
</main>

