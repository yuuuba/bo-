<div class="page-title">
  <h3>投稿する</h3>
</div>

<%= form_with model: @ondemand, local: true do |f| %>

  <div class="form-field">
    <label for="title">タイトル</label>
    <%= f.text_field :title %>
  </div>
  <div class="form-field">
    <p>内容</p>
    <%= f.text_area :body %>
  </div>
  <div class="form-field">
    <p>画像</p>
    <%= f.file_field :images, multiple: true %><br>
  </div>

  <%= fields_for @ondemand_category do |c| %>
  
  <div class="form-field">
    <p>カテゴリ</p>
    <select name="ondemand_category[name]">
      <%= grouped_options_for_select(OndemandCategory.to_group) %>
    </select>
  </div>

  <% end %>
  <%= fields_for @ondemand_tag do |t| %>

  <div class="form-field">
    <p>タグ ※スペースを入力することで複数のタグを付けることができます。</p>
    <%= t.text_field :name %>
  </div>

  <% end %>
  <%= fields_for @ondemand_detail do |d| %>

  <div class="form-field">
    <p>場所</p>
    <%= d.text_field :place %>
    <p>募集状態</p>
    <%= d.text_field :status %>
    <p>コミュニティの雰囲気</p>
    <%= d.text_field :mood %>
    <p>コミュニティの魅力</p>
    <%= d.text_field :charm %>
  </div>

  <div class="form-field">
    <p>現在の人数</p>
    <%= d.number_field :member %>
    <p>年齢層</p>
    <%= d.text_field :age_group %>
    <p>費用</p>
    <%= d.number_field :cost %>
    <p>持ち物</p>
    <%= d.text_area :item %>
    <p>服装</p>
    <%= d.text_area :dress %>
  </div>

  <div class="form-field">
    <p>条件</p>
    <%= d.text_field :condition %>
    <p>禁止事項</p>
    <%= d.text_field :prohibition %>
  </div>

  <% end %>
  <%= hidden_field_tag 'user[id]', current_user.id %>
  <%= f.submit %>
<% end %>